@model IEnumerable<UIDTSYS.Models.Departement>

@{
    ViewData["Title"] = "Departement";
}

<div class="container">
    <h2>Departement list</h2>
    <div>
        <a asp-action="Create">Add New Departement</a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped
        table-hover	
        table-borderless
        table-primary
        align-middle" aria-describedby="">
            <thead class="table-light">
                <caption>List of Departements</caption>
                <tr>
                    <th> @Html.DisplayNameFor(model => model.Id)</th>
                    <th> @Html.DisplayNameFor(model => model.Name)</th>
                    <th> @Html.DisplayNameFor(model => model.UrfId)</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach (var item in Model)
                {

                    <tr class="table-primary">
                        <td> @Html.DisplayFor(modelItem => item.Id)</td>
                        <td> @Html.DisplayFor(modelItem => item.Name)</td>
                        <td> @Html.DisplayFor(modelItem => item.UrfId)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>

                }
            </tbody>
            <tfoot>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="5">No rows <a asp-action="Index">Back Home</a></td>
                    </tr>
                }
            </tfoot>
        </table>
    </div>

</div>
